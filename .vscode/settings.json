{
    "nix.serverPath": "nixd",
    // Settings currently use "robin-pc" host. Edit this if you want to target a different host
    "nix.serverSettings": {
        "nixd": {
            "options": {
                "nixos": {
                    "expr": "(builtins.getFlake (builtins.toString ./.)).nixosConfigurations.robin-pc.options"
                },

                "home-manager": {
                    "expr": "(builtins.getFlake (builtins.toString ./.)).nixosConfigurations.robin-pc.options.home-manager.users.type.getSubOptions []"
                }
            }
        }
    },
    "nix.enableLanguageServer": true
}
